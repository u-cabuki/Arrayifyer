using System;
using System.IO;
using System.Text.RegularExpressions;

class Test
{
    public static void Main()
    {
        try
        {   
            using (StreamReader sr = new StreamReader("all_species_20190314_2245.json"))
            {
                String line = sr.ReadToEnd();
                line = Regex.Replace(line, @"\n\n", ",\n");
                line = line.Substring(0, line.Length -3);
                line = line.Insert(0, "[\n");
                line = line.Insert(line.Length, "\n]");
                string docPath =
                Environment.GetFolderPath(Environment.SpecialFolder.MyDocuments);
                using (StreamWriter outputFile = new StreamWriter(Path.Combine(docPath, "Fixed.json")))
                {
                    outputFile.WriteLine(line);
                }
             }
        }
        catch (IOException e)
        {
            Console.WriteLine("The file could not be read:");
            Console.WriteLine(e.Message);
        }
    }
}
